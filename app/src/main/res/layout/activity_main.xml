<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paso_actvity.devix.pasoactvity.MainActivity">

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#88599ee4"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtViewUno"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.1"
            android:padding="10dp"
            android:text="Ingresa tu Nombre"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold|normal" />

        <EditText
            android:id="@+id/EdtUno"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Ingresa tu nombre"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="18sp" />


    </LinearLayout>

    <Button
        android:id="@+id/BtnUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Linear1"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:background="#158477"
        android:text="OK" />


</RelativeLayout>
